                android:background="@drawable/button_ripple_effect"
                android:text="저장하기"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold"
                android:onClick="@{() -> viewModel.insert(viewModel.newTitle, viewModel.newContent)}"/>
