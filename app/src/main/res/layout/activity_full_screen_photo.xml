<?xml version="1.0" encoding="utf-8"?>
<com.thefuntasty.hauler.HaulerView
    android:id="@+id/haulerView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.detail.FullScreenPhotoActivity"
    app:dragDismissDistance="112dp"
    app:dragDismissScale="0.5">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <com.github.chrisbanes.photoview.PhotoView
            android:id="@+id/iv_fullscreen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000"
            android:scaleType="centerInside"
            android:transitionName="@string/transition_to_original_img"
            android:fitsSystemWindows="true"/>

    </androidx.core.widget.NestedScrollView>

</com.thefuntasty.hauler.HaulerView>